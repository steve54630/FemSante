            android:name="com.audreyRetournayDiet.femSante.domain.tete.BienTeteActivity"
            android:exported="false" />
        <activity
            android:name="com.audreyRetournayDiet.femSante.domain.corps.BienCorpsActivity"
            android:exported="false" />
        <activity
            android:name="com.audreyRetournayDiet.femSante.domain.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>