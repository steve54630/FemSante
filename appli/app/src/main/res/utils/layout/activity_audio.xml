<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_appli"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".shared.viewers.AudioActivity">

        <TextView
            android:id="@+id/textTitle"
            style="@style/AppTextAppearance.TitleFancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="10dp"
            android:text=""
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinnerExercice"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="48dp"
            android:spinnerMode="dialog"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/textTitle" />

        <androidx.media3.ui.PlayerView
            android:id="@+id/audioPlayer"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginBottom="172dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerExercice" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>