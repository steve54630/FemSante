<resources>
    <style name="Theme.FemSante" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/yellow_app</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>

        <item name="materialButtonStyle">@style/Widget.App.Button.Main</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="editTextStyle">@style/Widget.App.EditText</item>
        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <item name="textAppearanceHeadline6">@style/AppTextAppearance.HeadlineSmall</item>
        <item name="textAppearanceSubtitle1">@style/AppTextAppearance.BodyLarge</item>
        <item name="textAppearanceSubtitle2">@style/AppTextAppearance.BodyMedium</item>
        <item name="textAppearanceBody1">@style/AppTextAppearance.BodyLarge</item>
        <item name="textAppearanceBody2">@style/AppTextAppearance.BodyMedium</item>
        <item name="textAppearanceCaption">@style/AppTextAppearance.LabelSmall</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.LabelLarge</item>
    </style>

    <style name="AppTextAppearance.TitleFancy" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:fontFamily">@font/nothing_you_could_do</item>
        <item name="fontFamily">@font/nothing_you_could_do</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppTextAppearance.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item>
    </style>

    <style name="AppTextAppearance.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item>
    </style>

    <style name="AppTextAppearance.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item>
    </style>

    <style name="AppTextAppearance.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item>
    </style>

    <style name="AppTextAppearance.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button.Main" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/yellow_app</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.Button.Action" parent="Widget.App.Button.Main">
        <item name="backgroundTint">@color/blue_app</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/blue_app</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemTextAppearanceActive">@style/AppTextAppearance.LabelSmall</item>
        <item name="itemTextAppearanceInactive">@style/AppTextAppearance.LabelSmall</item>
    </style>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#757575</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/yellow_app</item>
        <item name="hintTextColor">@color/yellow_app</item>
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item>
    </style>

    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/orange_app</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>